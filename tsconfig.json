{
  "compilerOptions": {
    "sourceMap": true,
    // "declaration": true,
    // "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "target": "ES2017",
    "lib": ["ES2017", "DOM"]
  }
}
